<registry>
  <components>
    <component type="file-monitor" base="flumotion/component/transcoder">
      <source location="flumotion.component.transcoder.filemonitor"/>
    
      <entries>
        <entry type="component" location="filemonitor.py" function="FileMonitor"/>
        <entry type="admin/gtk" location="filemonitor_admin_gtk.py" function="GUIClass" />
      </entries>

      <properties>
        <property name="admin-id" type="string" required="no" multiple="no"/>
        <property name="directory" type="string" required="no" multiple="yes"/>
        <property name="scan-period" type="int" required="yes" multiple="no"/>        
      </properties>

    </component>
  </components>
  <bundles>

    <bundle project="transcoder" name="file-monitor-admin-gtk">
      <dependencies>
        <dependency name="component" />
        <dependency name="transcoder-base" />
        <dependency name="base-admin-gtk" />        
      </dependencies>
      <directories>
        <directory name="flumotion/component/transcoder">
          <filename location="filemonitor_admin_gtk.py" />
          <filename location="filemonitor.glade" />          
        </directory>
      </directories>
    </bundle>

    <bundle project="transcoder" name="file-monitor">
      <dependencies>
        <dependency name="component" />
        <dependency name="transcoder-base" />
      </dependencies>
      <directories>
        <directory name="flumotion/component/transcoder">
          <filename location="filemonitor.py" />
          <filename location="watcher.py" />          
        </directory>
      </directories>
    </bundle>

  </bundles>
</registry> 
