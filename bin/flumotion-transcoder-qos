import os
import sys

LIBDIR = '/usr/local/lib'
PROGRAM_PATH = 'flumotion.transcoder.tools.qos.main'

try:
    # setup the project root
    dir = os.path.dirname(os.path.abspath(__file__))
    if os.path.exists(os.path.join(dir, '.svn')):
        root = os.path.split(dir)[0]
    else:
        root = os.path.join(LIBDIR, 'flumotion', 'python')
    sys.path.insert(0, root)

    from transcoder import setup
    setup.setup()

    import warnings
    warnings.filterwarnings('ignore', category=UserWarning)

    # and boot!
    from flumotion.common import boot
    boot.boot(PROGRAM_PATH, gtk=False, gst=False)

except KeyboardInterrupt:
    print 'Interrupted'

